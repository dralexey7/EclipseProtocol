{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "../..",
    "baseUrl": ".",
    "paths": {
      "@routes/*": ["src/routes/*"],
      "@controllers/*": ["src/controllers/*"],
      "@services/*": ["src/services/*"],
      "@db": ["src/db/prisma"],
      "@utils/*": ["src/utils/*"],
      "@prisma/client": ["../../apps/generated/prisma-client"],
      "@packages/*": ["../../packages/*"]
    }
  },
  "include": ["src", "prisma", "../../packages/**/*"]
}
